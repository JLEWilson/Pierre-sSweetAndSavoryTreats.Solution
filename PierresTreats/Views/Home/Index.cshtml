<h1>Home</h1>
<br>
<h1>View All</h1>
<hr>
@if(@ViewBag.Treats.Count == 0)
{
  <h1>No treats have been added.</h1>
}
else
{
  <h3>
    Treats:
    @foreach (var treat in ViewBag.Treats)
    {
        <li>@Html.ActionLink($"{treat.Name}", "Details", "Treats" , new {id = treat.TreatId})</li>
    }
  </h3>
}

@if(@ViewBag.Flavors.Count == 0)
{
  <h1>No flavors have been added.</h1>
}
else
{
  <h3>
    Flavor:
    @foreach (var fla in ViewBag.Flavors)
    {
        <li>@Html.ActionLink($"{fla.Name}", "Details", "Flavors",  new {id = fla.FlavorId})</li>
    }
  </h3> 
}