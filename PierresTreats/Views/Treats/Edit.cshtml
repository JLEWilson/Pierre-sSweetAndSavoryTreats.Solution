@model PierresTreats.Models.Treat

<h1>Edit treat: </h1>
<h2>Treat to edit: @Html.DisplayFor(model => model.Name)</h2>
<h3>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name,
  new {required="required"})

  <input type="submit" value="Submit Edit" class="btn btn-lg btn-dark"/>
}
</h3>
<div class="links">
  <h4>@Html.ActionLink("Delete This Treat", "Delete", new { id = Model.TreatId })</h4>
  <h4>@Html.ActionLink("Back to Treat Details", "Details", new { id = Model.TreatId })</h4>
</div>