@{
  Layout = "_Layout";
}

@using PierresTreats.Models
@model List<PierresTreats.Models.Flavor>

@if(@Model.Count == 0)
{
  <h1>No flavor have been added. Please add aflavor</h1>
}
else
{
  <h1>Flavors: </h1>
  <h3>
  @foreach (Flavor Flavor in Model)
  {
    <li>@Html.ActionLink($"{Flavor.Name}", "Details", new {id = Flavor.FlavorId})</li>
  }
  </h3>
}
<div class="links">
  <h4>@Html.ActionLink("Add a Flavor", "Create")</h4>
</div>